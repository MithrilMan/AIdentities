<MudTabs Class="flex-1 mud-height-full" PanelClass="mud-height-full">
   <MudTabPanel Text="Conversational">
      <MudTabs Class="flex-1 mud-height-full" Position="Position.Left">
         @foreach (var connector in _state.ConversationalConnectors)
         {
            <MudTabPanel Class="mud-height-full" Text="@connector.Name" OnClick="() => EditConnector(connector)">
               <MudForm Class="flex-1 ma-1" Model="@_state" @ref="@_form" Validation="@(_validator.ValidateValue)" ValidationDelay="0">
                  <MudCard Class="flex-1 pa-1">
                     <MudCardContent>
                        <MudTextField Label="EndPoint" @bind-Value="_state.ConnectorEndPoint" />
                        <MudTextField Label="Api Key" InputType="InputType.Password" @bind-Value="_state.ConnectorApiKey" />
                     </MudCardContent>
                     <MudCardActions>
                        <MudButton Color="Color.Error" OnClick="Undo">Undo</MudButton>
                        <MudButton Color="Color.Success" OnClick="SaveConnectorSettings" ButtonType="ButtonType.Submit">Save</MudButton>
                     </MudCardActions>
                  </MudCard>
               </MudForm>
            </MudTabPanel>
         }
      </MudTabs>
   </MudTabPanel>
</MudTabs>
